<%- include("partials/header.ejs") %>
<div class="container border-light rounded-lg p-3">
  <h2 class="text-center">Sign up</h2>
  <form action="/signup" method="POST" enctype="application/json">
    <div class="mb-3">
      <label for="name" class="form-label">Display Name</label>
      <input
        type="text"
        class="form-control border-light"
        id="name"
        autocomplete="off"
        name="name"
      />
    </div>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control border-light"
        id="username"
        autocomplete="off"
        name="username"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control border-light"
        id="password"
        name="password"
      />
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Description</label>
      <textarea
        type="text"
        class="form-control border-light"
        id="desc"
        autocomplete="off"
        name="desc"
        placeholder="description"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-secondary">Sign up</button>
  </form>

  <p class="mt-3">
    Already have an account?
    <a class="text-info text-decoration-underline" href="/login">Login</a>
  </p>
</div>
<script>
  // Mendapatkan data pengguna dari userProfile jika tersedia
  if (sessionStorage.getItem("myToken")) {
    window.location.href = "/";
  }
</script>
