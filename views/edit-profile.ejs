<%- include("partials/header.ejs") %>
<div class="p-2">
  <h4 class="h1">Settings</h4>
  <div>
    <h1 class="d-none" id="username"><%= user.username %></h1>
    <h3>Edit Your Profile</h3>
    <form
      class="card bg-dark text-light p-3 border-light rounded-0"
      enctype="multipart/form-data"
      onsubmit="sendEditProfile(this, '<%= user.id %>')"
    >
      <div class="mb-3">
        <label for="displayName" class="form-label">Display Name</label>
        <input
          type="text"
          class="form-control border-light"
          id="displayName"
          name="displayName"
          value="<%= user.name %>"
          placeholder="Enter your new display name"
        />
      </div>
      <div class="mb-3">
        <label for="imgEdit" class="form-label">Profile Picture</label>
        <br />
        <input
          type="file"
          class="form-control d-none"
          id="imgEdit"
          name="image"
          accept="image/*"
        />
        <label
          for="imgEdit"
          class="btn btn-outline-secondary rounded-pill p-3 pt-2 pb-2"
          style="font-size: larger"
        >
          <i class="fa-solid fa-image"></i> Upload New Picture
        </label>
        <img
          id="previewEdit"
          src="<%= user.pp %>"
          class="rounded-circle pfp ms-2"
        />
      </div>
      <div class="mb-3">
        <label for="desc" class="form-label">Description</label>
        <textarea
          style="height: 120px"
          type="text"
          class="form-control border-light"
          id="desc"
          name="desc"
          placeholder="Enter your new description"
        >
<%= user.desc %>
</textarea
        >
      </div>
      <button
        type="submit"
        class="btn btn-secondary rounded-pill p-4 pt-2 pb-2"
        style="font-size: larger"
      >
        Save Changes
      </button>
    </form>
  </div>
  <div class="mt-1">
    <h1 class="d-none" id="username"><%= user.username %></h1>
    <h3>Edit Your Display</h3>
    <div class="card bg-dark text-light p-3 border-light rounded-0">
      <h4>Light/Dark Mode</h4>
      <article class="d-flex justify-content-between">
        <button id="lightMode" class="btn btn-light me-2 w-100">
          Light Mode
        </button>
        <button id="darkMode" class="btn btn-dark w-100">Dark Mode</button>
      </article>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
<script>
  fetch(`/user/check?id=${token}`)
    .then((res) => res.json())
    .then((check) => {
      if (check.check === true) {
        logout();
      }
      username = check.user.username;

      if (username !== "<%= user.username %>") {
        window.location.href = "/user/details/<%= user.username %>";
      }
    });

  // Add event listeners to buttons
  document.getElementById("lightMode").addEventListener("click", () => {
    applyTheme("light");
  });

  document.getElementById("darkMode").addEventListener("click", () => {
    applyTheme("dark");
  });
</script>
